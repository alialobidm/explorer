<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.latest_transfers') %></div>
      <div class="card-body">
        <div id="latest_transfers"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>

<script type="module">

    $(document).ready(function () {


        var query = new widgets.query(`
                        query ($network: TezosNetwork!,
                                $limit: Int!,
                                $offset: Int!
                                $from: ISO8601DateTime,
                                $till: ISO8601DateTime){
                    tezos(network: $network){
                      transfers(options:{desc: "block.height", limit: $limit, offset: $offset},
                        time: {since: $from till: $till }
                        ) {
                          amount
                          transaction {
                            hash
                            source
                          }
                          timestamp {
                            time
                          }
                          sender {
                            address
                            annotation
                          }
                          receiver {
                            address
                            annotation
                          }
                          direction
                          currency {
                            address
                            decimals
                            name
                            symbol
                            tokenId
                            tokenType
                          }
                          block {
                            height
                            hash
                          }
                      }
                    }
                  }`);

        new widgets.table('#latest_transfers', query, 'tezos.transfers', {
            title: '<%= t('widgets.headers.latest_transfers') %>',
            dataOptions: [
                {
                    title: '<%= t('widgets.titles.timestamp') %>',
                    type: 'string',
                    path: 'timestamp.time',
                    style: 'width: 170px;'
                },
                {
                    title: '<%= t('widgets.titles.height') %>',
                    type: 'string',
                    path: 'block.height',
                    urlCallbackName: 'height_path',
                    style: 'width: 80px;'
                },
                {
                    title: '<%= t('widgets.titles.sender') %>',
                    type: 'string-ellipsis',
                    path: ['sender.address'],
                    urlCallbackName: 'sender_address_path'
                },
                {
                    title: '',
                    type: 'string',
                    data: '<i class="fa fa-sign-in text-success"></i>',
                    html_class: 'text-center'
                },
                {
                    title: '<%= t('widgets.titles.receiver') %>',
                    type: 'string-ellipsis',
                    path: ['receiver.address'],
                    urlCallbackName: 'receiver_address_path'
                },
                {
                    title: '<%= t('widgets.titles.amount') %>',
                    type: 'amount',
                    path: 'amount'
                },
                {
                    title: '<%= t('widgets.titles.currency') %>',
                    type: 'string',
                    path: 'currency.symbol'
                },
                {
                    title: '<%= t('widgets.titles.direction') %>',
                    path: 'direction'
                }
            ]
        });

      <% from, till = date_range_from_now(30, :minutes) %>
      queryWithTimeRange(rr, query, "<%= from %>", "<%= till %>", {
          network: '<%= params['network']['network'] %>'
      });


    });

</script>