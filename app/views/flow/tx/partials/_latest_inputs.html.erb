<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.latest_inputs') %></div>
      <div class="card-body">
        <div id="latest_inputs"><%= t('loading') %></div>
      </div>
    </div> 
  </div>
</div>

<script type="module">
  $( document ).ready(function() {
    const qraphql_query = `
      query ($network: FlowNetwork!, $limit: Int!, $offset: Int!, $from: ISO8601DateTime, $till: ISO8601DateTime, $id: String!) {
        flow(network: $network) {
          inputs(
            options: {desc: "time.time", limit: $limit, offset: $offset}
            date: {since: $from, till: $till}
            transactionId: {is: $id}
          ) {
            time {
              time(format: "%Y-%m-%d %H:%M:%S")
            }
            address {
              address
            }
            currency {
              symbol
            }
            entityId
            amount
            smartContractMethod {
              signature
            }
            eventIndex
            transferReason
          }
        }
      }

    `.trim();

    const query = new widgets.query(qraphql_query);

    new widgets.table('#latest_inputs', query, 'flow.inputs', {
      title: '<%= t('widgets.headers.latest_inputs') %>',
      dataOptions: [
        {
          title: '<%= t('widgets.titles.timestamp') %>',
          type: 'string',
          path: 'time.time'
        },
        {
          title: '<%= t('widgets.titles.event_index') %>',
          type: 'string',
          path: 'eventIndex'
        },
        {
          title: '<%= t('widgets.titles.receiver') %>',
          type: 'string-ellipsis',
          path: 'address.address',
          urlCallbackName: 'address',
        },
        {
          title: '<%= t('widgets.titles.nft_id') %>',
          type: 'string',
          path: 'entityId'
        },
        {
          title: '<%= t('widgets.titles.amount') %>',
          type: 'string',
          path: 'amount'
        },
        {
          title: '<%= t('widgets.titles.currency') %>',
          type: 'string',
          path: 'currency.symbol'
        },
        {
          title: '<%= t('widgets.titles.transfer_reason') %>',
          type: 'string',
          path: 'transferReason'
        },
        {
          title: '<%= t('widgets.titles.method') %>',
          type: 'string',
          path: 'smartContractMethod.signature'
        },
      ]
    });

    query.request({
      id: '<%= @tx_hash %>',
      network: '<%= params['network']['network'] %>'
    });
  });
</script>
