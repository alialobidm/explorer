<div class="col-12 col-lg-6 mb-4">
  <div class="card">
    <div class="card-header"><%= t('widgets.headers.failed_transactions_by_date') %></div>

    <div class="card-body">
      <div id="failed_transactions_by_date"><%= t('loading') %></div>
    </div>
  </div>
</div>

<script type="module">
  $( document ).ready(function() {

    const graphql_query =
    `
      query ($network: FlowNetwork!, $dateFormat: String!, $from: ISO8601DateTime, $till: ISO8601DateTime){
        flow(network: $network){
          transactions(options:{asc: "date.date"}, date: { since: $from, till: $till}, statusCode: {is: 1}) {
            date {
              date(format: $dateFormat)
            }
            countBigInt
          }
        }
      }
    `.trim();

    const query = new widgets.query(graphql_query);

    new widgets.chartByTime('#failed_transactions_by_date', query, 'flow.transactions', {
      title: '<%= t('widgets.headers.failed_transactions_by_date') %>',
      chartOptions: {
        vAxes: {
          '0': {
            title: '<%= t('widgets.titles.transactions_count') %>'
          }
        },
        seriesType: 'bars',
        series: {
          '0': { color: '#ea5545' }
        },
      },
      dataOptions: [
        {
          title: {label: '<%= t('widgets.titles.date') %>', type: 'date' },
          path: 'date.date'
        },
        {
          title: {label: '<%= t('widgets.titles.transactions_count') %>', type: 'number' },
          path: 'countBigInt'
        },
      ]
    });

