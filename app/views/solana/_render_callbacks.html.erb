<script type="module">
  widgets.callbacks({
    block_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/block/'+ item.height;
    },
    block_height_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/block/'+item.block.height;
    },
    tx_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/tx/'+ (item.signature || item.transaction.signature);
    },
    address_path: function(item){
      if (item.sender && item.sender.address) {
        return '<%= locale_path_prefix %><%= @network[:network] %>'+'/address/'+item.sender.address;
      }

      if (item.receiver && item.receiver.address) {
        return '<%= locale_path_prefix %><%= @network[:network] %>'+'/address/'+item.receiver.address;
      }

      if (item.account) {
        return '<%= locale_path_prefix %><%= @network[:network] %>'+'/address/'+item.account;
      }

      if (item.program.id){
        return '<%= locale_path_prefix %><%= @network[:network] %>'+'/address/'+item.program.id;
      }
    },
    signature_path: function(item){
        return '<%= locale_path_prefix %><%= @network[:network] %>'+'/tx/'+ (item.signature || item.transaction.signature);
    },
  });
</script>
