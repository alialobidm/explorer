<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.latest_transactions') %></div>
      <div class="card-body">
        <div id="latest_transactions"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>
<script type="module">
  $( document ).ready(function() {


      var query = new widgets.query(`
                      query ($network: EthereumNetwork!,
                              $limit: Int!,
                              $offset: Int!
                              $from: ISO8601DateTime,
                              $till: ISO8601DateTime){
                  ethereum(network: $network){
                    transactions(options:{desc: "block.height", limit: $limit, offset: $offset},
                      time: {since: $from till: $till }
                      ) {

                        block {
                          timestamp {
                            time (format: "%Y-%m-%d %H:%M:%S")
                          }
                          height
                        }

                        address: sender {
                          address
                          annotation
                        }
                        hash
                        gasValue
                        gas_value_usd: gasValue(in: USD)
                    }
                  }
                }`);

      new widgets.table('#latest_transactions', query, 'ethereum.transactions', {
          title: '<%= t('widgets.headers.latest_transactions') %>',
          dataOptions: [
              {
                  title: '<%= t('widgets.titles.timestamp') %>',
                  type: 'string',
                  path: 'block.timestamp.time',
                  style: 'width: 170px;'
              },
              {
                  title: '<%= t('widgets.titles.block') %>',
                  type: 'string',
                  path: 'block.height',
                  urlCallbackName: 'block_path',
                  style: 'width: 80px;'
              },

              {
                  title: '<%= t('widgets.titles.tx_sender') %>',
                  type: 'string-ellipsis',
                  path: ['address.annotation','address.address'],
                  urlCallbackName: 'address_path'
              },
              {
                  title: '<%= t('widgets.titles.hash') %>',
                  type: 'string-ellipsis',
                  path: 'hash',
                  urlCallbackName: 'transaction_path'
              },

              {
                  title: '<%= t('widgets.titles.gas_value') %>, <%= @network[:currency] %>',
                  type: 'amount',
                  path: 'gasValue',
                  style: 'width: 110px;'
              },
              {
                  title: '',
                  data: '',
                  style: 'width: 110px;',
                  renderCallback: <%= render partial: 'ethereum/currency_with_amount_usd', formats: :text, locals: {currency: '""', amount: 'item.gas_value_usd', } %>
              }
          ]
      });

      <% from, till = date_range_from_now(30, :minutes) %>
        queryWithTimeRange(rr, query, "<%= from %>", "<%= till %>", {
            network: '<%= params['network']['network'] %>'
        });
  });
</script>
