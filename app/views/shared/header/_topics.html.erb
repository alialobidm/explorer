<% content_for :title, t( "tabs.#{controller_name}.#{params[:action]}.title", network: @network[:name], topic: @topic_id) %>
<% content_for :description, t( "tabs.#{controller_name}.#{params[:action]}.description", network: @network[:name], topic: @topic_id) %>
<% content_for :keywords, t( "tabs.#{controller_name}.#{params[:action]}.keywords", network: @network[:name], topic: @topic_id) %>
<%= render partial: 'shared/title', locals: {
          icon: t("tabs.#{controller_name}.icon"),
          header: t("tabs.#{controller_name}.header",
                     network: @network[:name], topic: copy_text(@topic_id, 'text-info', is_block_section: @is_block_section, height: @height, network: @network, block_id: @block_id)).html_safe,
          reportrange: true } %>
