<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.latest_token_transfers') %></div>
      <div class="card-body">
        <div id="latest_token_transfers"><%= t('loading') %></div>
      </div>
    </div> </div>
</div>

<script type="module">
  $( document ).ready(function() {
    const qraphql_query = `
      query ($network: EverscaleNetwork!, $limit: Int!, $offset: Int!, $from: ISO8601DateTime, $till: ISO8601DateTime, $currency: String!) {
        everscale(network: $network) {
          transfers(
            options: {desc: "timestamp.time", limit: $limit, offset: $offset}
            date: {since: $from, till: $till}
            currency: {is: $currency}
          ) {
            timestamp {
              time(format: "%Y-%m-%d %H:%M:%S")
            }
            amount
            amount_usd: amount(in: USD)
            currency{
              symbol
            }
            transactions{
              hash
            }
            sender{
              address
            }
            receiver{
              address
            }
            transferType
          }
        }
      }
    `.trim();

    const query = new widgets.query(qraphql_query);

    new widgets.table('#latest_token_transfers', query, 'everscale.transfers', {
      title: '<%= t('widgets.headers.latest_token_transfers') %>',
      dataOptions: [
        {
          title: '<%= t('widgets.titles.timestamp') %>',
          type: 'string',
          path: 'timestamp.time',
          style: 'width: 170px;'
        },
        {
          title: '<%= t('widgets.titles.tx_hash') %>',
          type: 'string-ellipsis',
          path: 'transactions.hash',
          urlCallbackName: 'transaction_hash_path'
        },
        {
          title: '<%= t('widgets.titles.sender') %>',
          type: 'string-ellipsis',
          path: ['sender.address'],
          urlCallbackName: 'sender_address_path'
        },
        {
          title: '',
          type: 'string',
          data: '<i class="fa fa-sign-in text-success"></i>',
          html_class: 'text-center'
        },
        {
          title: '<%= t('widgets.titles.receiver') %>',
          type: 'string-ellipsis',
          path: ['receiver.address'],
          urlCallbackName: 'receiver_address_path'
        },
        {
          title: '<%= t('widgets.titles.amount') %>',
          type: 'amount',
          path: 'amount'
        },
        {
          style: 'width: 80px;',
          renderCallback: <%= render partial: 'ethereum/currency_with_amount_usd', formats: :text, locals: {currency: '""', amount: 'item.amount_usd'} %>
        },
        {
          title: '<%= t('widgets.titles.currency') %>',
          type: 'string',
          path: 'currency.symbol',
        },
        {
          title: '<%= t('widgets.titles.transfer_type') %>',
          type: 'string-ellipsis',
          path: 'transferType'
        },
      ]
    });

    const fromDate = '<%= j @from %>';
    const tillDate = '<%= j @till %>';

    queryWithTimeRange(rr, query, fromDate, tillDate,{
      currency: "<%= @token %>",
      network: '<%= params['network']['network'] %>'
    });
  });
</script>

