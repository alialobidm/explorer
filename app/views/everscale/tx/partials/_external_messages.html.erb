<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.external_messages') %></div>
      <div class="card-body">
        <div id="external_messages"><%= t('loading') %></div>
      </div>
    </div> </div>
</div>

<script type="module">
  $( document ).ready(function() {
    const qraphql_query = `
      query ($network: EverscaleNetwork!, $limit: Int!, $offset: Int!, $from: ISO8601DateTime, $till: ISO8601DateTime, $tx_hash: String!) {
        everscale(network: $network) {
          messages(
            options: {asc: "timestamp.time", limit: $limit, offset: $offset}
            date: {since: $from, till: $till}
            txHash: {is: $tx_hash}
            messageDirection: {is: out}
          ) {
            shardedBlock {
              hash
            }
            timestamp {
              time
            }
            hash
            sender{
              address
            }
            receiver{
              address
            }
            typeName
          }
        }
      }
    `.trim();

    const query = new widgets.query(qraphql_query);

    new widgets.table('#external_messages', query, 'everscale.messages', {
      title: '<%= t('widgets.headers.external_messages') %>',
      dataOptions: [
        {
          title: '<%= t('widgets.titles.timestamp') %>',
          type: 'string',
          path: 'timestamp.time',
          style: 'width: 170px;'
        },
        {
          title: '<%= t('widgets.titles.block_hash') %>',
          type: 'string-ellipsis',
          path: 'shardedBlock.hash',
          urlCallbackName: 'sharded_hash_path'
        },
        {
          title: '<%= t('widgets.titles.message_hash') %>',
          type: 'string',
          path: 'hash',
          urlCallbackName: 'message_path',
          style: 'width: 80px;'
        },
        {
          title: '<%= t('widgets.titles.sender') %>',
          type: 'string-ellipsis',
          path: ['sender.address'],
          urlCallbackName: 'sender_address_path'
        },
        {
          title: '',
          type: 'string',
          data: '<i class="fa fa-sign-in text-success"></i>',
          html_class: 'text-center'
        },
        {
          title: '<%= t('widgets.titles.receiver') %>',
          type: 'string-ellipsis',
          path: ['receiver.address'],
          urlCallbackName: 'receiver_address_path'
        },
        {
          title: '<%= t('widgets.titles.type') %>',
          type: 'string',
          path: 'typeName'
        },
      ]
    });

    query.request({
      tx_hash: '<%= @tx_hash %>',
      network: '<%= params['network']['network'] %>'
    });
  });
</script>

