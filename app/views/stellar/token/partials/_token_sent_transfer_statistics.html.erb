<div class="col-12 col-lg-6 mb-4">
  <div class="card">
    <div class="card-header"><%= t('widgets.headers.token_sent_statistics') %></div>
    <div class="card-body">
      <div id="token_statistics"><%= t('loading') %></div>
    </div>
  </div> 
</div>

<script type="module">
  $( document ).ready(function() {
    const qraphql_query = `
      query ($network: StellarNetwork!, $limit: Int!, $offset: Int!, $from: ISO8601DateTime, $till: ISO8601DateTime, $currency: String!) {
        stellar(network: $network) {
          transfers(
            options: {desc: "count", asc: "currencyFrom.symbol", limit: $limit, offset: $offset}
            date: {since: $from, till: $till}
            currencyFromName: {is: $currency}
          ) {
            currencyFrom {
              symbol
            }
            count
            amountFrom 
            amount_from_usd: amountFrom(in: USD)

            senders_count: count(uniq: senders)
            receivers_count: count(uniq: receivers)
            days: count(uniq: dates)

            first_date_transfer: minimum(of: date)
            last_date_transfer: maximum(of: date)

            median: amountFrom(calculate: median)
            average: amountFrom(calculate: average)
          }
        }
      }
    `.trim();

    const query = new widgets.query(qraphql_query);

    new widgets.table('#token_statistics', query, 'stellar.transfers', {
      title: '<%= t('widgets.headers.token_statistics') %>',
      renderData: function (data) {
          item = data[0];
          return !item ? [] : [
              {name: '<%= t('widgets.titles.transfer_count') %>', value: item.count},

              {name: '<%= t('widgets.titles.uniq_senders') %>', value: item.senders_count},
              {name: '<%= t('widgets.titles.uniq_receivers') %>', value:item.receivers_count},

              {name: '<%= t('widgets.titles.total_amount') %>', value: item.amountFrom+' '+escapeHtml(item.currencyFrom.symbol)},
              {name: '<%= t('widgets.titles.total_amount_usd') %>', value: item.amount_from_usd+' '+'USD'},

              {name: '<%= t('widgets.titles.median_amount') %>', value: item.median+' '+escapeHtml(item.currencyFrom.symbol)},
              {name: '<%= t('widgets.titles.average_amount') %>', value: item.average+' '+escapeHtml(item.currencyFrom.symbol)},


              {name: '<%= t('widgets.titles.first_transfer_date') %>', value: item.first_date_transfer},
              {name: '<%= t('widgets.titles.last_transfer_date') %>', value: item.last_date_transfer},
              {name: '<%= t('widgets.titles.transfer_days') %>', value: item.days},

          ];
      },
      dataOptions: [
        {
          title: '<%= t('widgets.titles.metric') %>',
          type: 'string-ellipsis',
          path: 'name',
          html_class: 'text-info font-weight-bold'
        },
        {
          title: '<%= t('widgets.titles.property_value') %>',
          type: 'string-ellipsis',
          escape: false,
          path: 'value',
          urlCallbackName: 'property_value_path'
        },
      ]
    });

    const fromDate = '<%= j @from %>';
    const tillDate = '<%= j @till %>';

    queryWithTimeRange(rr, query, fromDate, tillDate,{
      currency: "<%= @token %>",
      network: '<%= params['network']['network'] %>'
    });
  });
</script>


