<div class="col-12 col-lg-6 mb-4">
  <div class="card">
    <div class="card-header"><%= t('widgets.headers.inbound_native_by_time', currency: @network[:currency]) %></div>
    <div class="card-body">
      <div id="inbound_native_by_time"><%= t('loading') %></div>
    </div>
  </div>
</div>

<script type="module">
  $(document).ready(function() {
    var query = new widgets.query(`
      query ($network: ConfluxNetwork!,
             $dateFormat: String!,
             $nativeCurrency: String!,
             $address: String!,
             $from: ISO8601DateTime,
             $till: ISO8601DateTime) {
        conflux(network: $network) {
          transfers(
            options: {asc: "date.date"},
            date: {since: $from, till: $till},
            amount: {gt: 0},
            receiver: {is: $address},
            currency: {is: $nativeCurrency}
          ) {
            date: date {
              date(format: $dateFormat)
            }
            count: countBigInt
            amount
          }
        }
      }`);

    new widgets.chartByTime('#inbound_native_by_time', query, 'conflux.transfers', {
      title: '<%= t('widgets.headers.inbound_native_by_time', currency: @network[:currency]) %>',
      chartOptions: {
        vAxes: {
          '0': {
            title: '<%= t('widgets.titles.volume_in', currency: @network[:currency]) %>'
          },
          '1': {
            title: '<%= t('widgets.titles.receive_count') %>'
          }
        },
        seriesType: 'bars',
        series: {
          '0': { color: 'lightgreen' },
          '1': { color: '#28a745', type: 'line', targetAxisIndex: 1, lineWidth: 3, pointsVisible: true, pointShape: 'diamond', pointSize: 12 }
        }
      },
      dataOptions: [
        {
          title: {label: '<%= t('widgets.titles.date') %>', type: 'date'},
          path: 'date.date'
        },
        {
          title: '<%= t('widgets.titles.volume_in', currency: @network[:currency]) %>',
          path: 'amount'
        },
        {
          title: {label: '<%= t('widgets.titles.receive_count') %>', type: 'number'},
          path: 'count'
        }
      ]
    });

    queryWithTimeRange(rr, query, '<%= j @from %>', '<%= j @till %>', {
      network: '<%= j params[:network][:network] %>',
      address: '<%= j @address %>',
      nativeCurrency: '<%= j @network[:currency] %>'
    });
  });
</script>
