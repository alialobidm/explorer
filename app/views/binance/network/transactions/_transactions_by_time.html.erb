<div class="col-12 col-lg-6 mb-4">
  <div class="card">
    <div class="card-header"><%= t('widgets.headers.transactions_by_time') %></div>
    <div class="card-body">
      <div id="transactions_by_time"><%= t('loading') %></div>
    </div>
  </div>
</div>


<script type="module">

    $( document ).ready(function() {

        var query = new widgets.query(`
            query ($dateFormat: String!,

                  $from: ISO8601DateTime,
                  $till: ISO8601DateTime){
                    binance {
                      transactions(options:{asc: "date.date"}, date: {
                        since: $from
                        till: $till}

                      ) {
                        date: date{
                          date(format: $dateFormat)
                        }
                        count: countBigInt

                      }
                    }
                  }`);

        new widgets.chartByTime('#transactions_by_time', query, 'binance.transactions', {
            title: '<%= t('widgets.headers.transactions_by_time') %>',
            chartOptions: {
                vAxes: {
                    '0': {
                        title: '<%= t('widgets.titles.transactions_count') %>'
                    }
                },
                seriesType: 'bars',
                series: {
                    '0': { color: '#28a745' }
                },
            },
            dataOptions: [
                {
                    title: {label: '<%= t('widgets.titles.date') %>', type: 'date' },
                    path: 'date.date'
                },
                {
                    title: {label: '<%= t('widgets.titles.transactions_count') %>', type: 'number' },
                    path: 'count'
                },

            ]
        });

        const fromDate = '<%= j @from %>'; 
        const tillDate = '<%= j @till %>';
        queryWithTimeRange(rr, query, fromDate, tillDate)});
</script>
