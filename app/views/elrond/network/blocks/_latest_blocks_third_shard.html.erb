<div class="row">
  <div class="col-12 col-lg-12 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.latest_blocks_third_shard') %></div>
      <div class="card-body">
        <div id="latest_blocks_third_shard"><%= t('loading') %></div>
      </div>
    </div> </div>
</div>

<script type="module">

  $( document ).ready(function() {

    const qraphql_query = `
      query ($network: ElrondNetwork!, $limit: Int!, $offset: Int!, $from: ISO8601DateTime, $till: ISO8601DateTime) {
        elrond(network: $network) {
          blocks(
            options: {desc: "height", limit: $limit, offset: $offset}
            time: {since: $from, till: $till} 
            shard: {is: 2}
          ) {
            time {
              time(format: "%Y-%m-%d %H:%M:%S")
            }
            height
            transactionCount
            hash
            size
            sizeTxs
          }
        }
      }
    `.trim();

    const query = new widgets.query(qraphql_query);

    new widgets.table('#latest_blocks_third_shard', query, 'elrond.blocks', {
      title: '<%= t('widgets.headers.latest_blocks_third_shard') %>',
      dataOptions: [
        {
          title: '<%= t('widgets.titles.timestamp') %>',
          type: 'string',
          path: 'time.time'
        },
        {
          title: '<%= t('widgets.titles.block') %>',
          type: 'string',
          path: 'height'
        },
        {
          title: '<%= t('widgets.titles.hash') %>',
          type: 'string',
          path: 'hash',
          urlCallbackName: 'block_path'
        },
        {
          title: '<%= t('widgets.titles.transactions_count') %>',
          type: 'string',
          path: 'transactionCount'
        },
        {
          title: '<%= t('widgets.titles.size') %>',
          type: 'string',
          path: 'size'
        },
        {
          title: '<%= t('widgets.titles.size_txs') %>',
          type: 'string',
          path: 'sizeTxs'
        }
      ]
    });

      <% from, till = date_range_from_now(30, :minutes) %>
      queryWithTimeRange(rr, query, "<%= from %>", "<%= till %>", {
          network: '<%= params['network']['network'] %>'
      });

  });
</script>

