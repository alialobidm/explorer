<script type="module">
  widgets.callbacks({
    block_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/block/'+ (item.hash || item.notarizedBlockHash || item.block.hash);
    },

    miniblocks_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/miniblocks/'+ item.hash;
    },

    miniblocks_related_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/miniblocks/'+ item.miniblock.hash;
    },

    transaction_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/tx/' + (item.hash || item.transaction.hash);
    },

    transaction_path_by_hash: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/tx/' + item.transaction.hash;
    },

    call_result_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/call_result/' + (item.hash);
    },

    sender_block_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/block/'+ item.senderBlock.hash;
    },
    receiver_block_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/block/'+ item.receiverBlockHash;
    },

    sender_address_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/address/'+ (item.sender.annotation || item.sender.address);
    },
    receiver_address_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/address/'+ (item.receiver.annotation || item.receiver.address);
    },
    smart_contract_address_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/address/'+ (item.smartContractAddress.address);
    },

    validator_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/validators/'+ (item.validator.hex);
    },

    shard_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/shards/'+ item.shard;
    },

    block_shard_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/shards/'+ item.block.shard;
    },

    receiver_shard_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/shards/'+ item.receiverShard;
    },

    sender_shard_path: function(item){
      return '<%= locale_path_prefix %><%= @network[:network] %>'+'/shards/'+ item.senderBlock.shard;
    },

    property_value_path: function(item){
      link_prefix = '<%= locale_path_prefix %><%= @network[:network] %>'

      if (item.senderBlockHash){
          return `${link_prefix}/block/` + item.senderBlockHash;
      }
      if (item.blockHash){
          return `${link_prefix}/block/` + item.blockHash;
      }
      else if (item.miniblockHash) {
        return `${link_prefix}/miniblocks/` + item.miniblockHash;
      }
      else if (item.address) {
        return `${link_prefix}/address/` + item.address;
      }
      else if (item.txHash) {
        return `${link_prefix}/tx/` + item.txHash;
      }
      else if (item.shard_id) {
        return `${link_prefix}/shards/` + item.shard_id;
      }
      return null
    }
  });
</script>
