<div class="col-12 col-lg-6 mb-4">
  <div class="card">
    <div class="card-header"><%= t('widgets.headers.outputs_transactions') %></div>
    <div class="card-body">
      <div id="outputs"><%= t('loading') %></div>
    </div>
  </div>
</div>

<script type="module">
  $(document).ready(function() {

    const qraphql_query = `
      query ($network: HederaNetwork!, $limit: Int!, $offset: Int!, $from: ISO8601DateTime, $till: ISO8601DateTime, $account_id: String!) {
        hedera(network: $network) {
          outputs(options: {desc: "time.time", limit: $limit, offset: $offset}, date: {since: $from, till: $till}, transferEntity: {is: $account_id}) {
            time {
              time
            }
            transactionHash
            result {
              name
            }
            memo
            amount
            amount_usd: amount(in: USD)
            currency {
              name
            }
          }
        }
      }
    `.trim();

    const query = new widgets.query(qraphql_query);

    new widgets.table('#outputs', query, 'hedera.outputs', {
      title: '<%= t('widgets.headers.outputs_transactions') %>',
      dataOptions: [
        {
          title: '<%= t('widgets.titles.timestamp') %>',
          path: 'time.time',
          style: 'width: 70px;'
        },
        {
          title: '<%= t('widgets.titles.transaction_hash') %>',
          path: 'transactionHash',
          urlCallbackName: 'transaction_hash_path',
          style: 'width: 70px;'
        },
        {
          title: '<%= t('widgets.titles.amount') %>, <%= @network[:currency] %>',
          path: 'amount',
          style: 'width: 70px;'
        },
          {
              style: 'width: 30px;',
              renderCallback: <%= render partial: 'ethereum/currency_with_amount_usd', formats: :text, locals: {currency: '""', precision: 6} %>
          },
          {
          title: '<%= t('widgets.titles.transaction_result') %>',
          path: 'result.name',
          style: 'width: 70px;'
        },
        {
          title: '<%= t('widgets.titles.memo') %>',
          path: 'memo',
          style: 'width: 70px;'
        },
      ]
    });

    const fromDate = '<%= j @from %>';
    const tillDate = '<%= j @till %>';

    queryWithTimeRange(rr, query, fromDate, tillDate,{
      account_id: '<%= params[:account_id] %>',
      network: '<%= @network[:network] %>'
    });

  });
</script>
