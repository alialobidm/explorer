<div class="row">
  <div class="col-12 col-lg-6 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.calls_by_time') %></div>
      <div class="card-body">
        <div id="calls_by_time"><%= t('loading') %></div>
      </div>
    </div>
  </div>

  <div class="col-12 col-lg-6 mb-4">
    <div class="card">
      <div class="card-header"><%= t('widgets.headers.contracts_by_time') %></div>
      <div class="card-body">
        <div id="contracts_by_time"><%= t('loading') %></div>
      </div>
    </div>
  </div>
</div>


<script type="module">

    $( document ).ready(function() {

        var query = new widgets.query(`
            query (
                  $dateFormat: String!,
                  $date: ISO8601DateTime){
                    eos{
                      smartContractCalls(options:{asc: "date.date"}, date: {is: $date}

                      ) {
                        date: date{
                          date(format: $dateFormat)
                        }
                        count: countBigInt
                        contracts: countBigInt(uniq: smart_contracts)
                      }
                    }
                  }`);

        new widgets.chartByTime('#calls_by_time', query, 'eos.smartContractCalls', {
            title: '<%= t('widgets.headers.calls_by_time') %>',
            chartOptions: {
                vAxes: {
                    '0': {
                        title: '<%= t('widgets.titles.calls_count') %>'
                    }
                },
                seriesType: 'bars',
                series: {
                    '0': { color: '#28a745' }
                },
            },
            dataOptions: [
                {
                    title: {label: '<%= t('widgets.titles.date') %>', type: 'date' },
                    path: 'date.date'
                },
                {
                    title: {label: '<%= t('widgets.titles.calls_count') %>', type: 'number' },
                    path: 'count'
                },

            ]
        });

        new widgets.chartByTime('#contracts_by_time', query, 'eos.smartContractCalls', {
            title: '<%= t('widgets.headers.contracts_by_time') %>',
            chartOptions: {
                vAxes: {
                    '0': {
                        title: '<%= t('widgets.titles.uniq_contracts') %>'
                    }
                },
                series: {
                    '0': { color: '#ffc107' }
                },
                seriesType: 'bars'
            },
            dataOptions: [
                {
                    title: {label: '<%= t('widgets.titles.date') %>', type: 'date' },
                    path: 'date.date'
                },
                {
                    title: {label: '<%= t('widgets.titles.uniq_contracts') %>', type: 'number' },
                    path: 'contracts'
                },

            ]
        });

        query.request({
            date: '<%= @block_date %>',
            dateFormat: "%Y-%m-%d"
        })



    });
</script>
